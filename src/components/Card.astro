---
interface Props {
	image: string
	title: string
	description: string
}

const { image, title, description } = Astro.props
---

<div
	class="bg-gray-800 p-4 rounded-md transition-[background] ease-in-out shadow shadow-[rgba(255, 255, 255, 0.1)] flex flex-col items-center"
>
	<img src={image} alt={`${title} - ${description}`} class="w-60 mb-2 lg:w-80" />

	<div>
		<h3 class="m-0 font-medium tracking-wider text-xl lg:text-xl">
			{title}
		</h3>
		<p class="mb-0 mt-2">
			{description}
		</p>
	</div>
</div>
